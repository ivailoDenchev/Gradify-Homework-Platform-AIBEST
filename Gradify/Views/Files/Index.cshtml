@{
    ViewData["Title"] = "File Upload";
    var files = Model as IEnumerable<string>;
}

<div class="text-center">
    <h1 class="display-4">Upload and Download Files</h1>
    <p>Upload a file to Google Cloud Storage and download it.</p>
</div>

<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" name="file" />
    </div>
    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-primary" />
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

@if (files != null && files.Any())
{
    <div>
        <h2>Available Files</h2>
        <ul>
            @foreach (var file in files)
            {
                <li>
                    <a asp-controller="Files" asp-action="DownloadFile" asp-route-objectName="@file">@file</a>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div>
        <p>No files available for download.</p>
    </div>
}
